<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CurrentLessonFragment"
    android:background="@color/bg_main">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/words_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="155dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

        />
    <!--
        Recycler View https://metanit.com/java/android/5.11.php
    -->


    <ImageButton
        android:id="@+id/imageButtonToLessons"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/bg_main"
        android:backgroundTint="@color/bg_main"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="101sp"
        android:fontFamily="@font/chewy"
        android:text="@string/top_text"
        android:textColor="@color/purple_700"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="470dp"
        android:layout_marginHorizontal="25dp"
        >
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_learn"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/purple_700_light"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_translate"
            android:backgroundTint="@color/purple_700_light"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_match"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/purple_700_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="535dp"
        android:layout_marginHorizontal="25dp"
        >

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_picture"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/purple_700_light"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_write"
            android:backgroundTint="@color/purple_700_light"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_plit"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/purple_700_light"/>
    </LinearLayout>


</FrameLayout>