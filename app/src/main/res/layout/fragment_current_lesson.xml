<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CurrentLessonFragment"
    android:background="@color/bg_main">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/words_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="300dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

        />
    <!--
        Recycler View https://metanit.com/java/android/5.11.php
    -->


    <ImageButton
        android:id="@+id/imageButtonToLessons"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/bg_main"
        android:backgroundTint="@color/bg_main"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="101sp"
        android:fontFamily="@font/chewy"
        android:text="@string/top_text"
        android:textColor="@color/purple_700"
        android:textSize="45sp" />




</FrameLayout>