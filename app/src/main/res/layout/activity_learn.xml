<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnActivity"
    android:background="@color/bg_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonToLesson"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/bg_main"
            android:backgroundTint="@color/bg_main"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/english_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="40sp"
            android:fontFamily="@font/chewy"
            android:textColor="@color/blue"
            />

        <ImageView
            android:id="@+id/word_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"/>

        <TextView
            android:id="@+id/russian_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:textSize="40sp"
            android:fontFamily="@font/chewy"
            android:textColor="@color/blue"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30sp">

            <Button
                android:id="@+id/bt_not_memo"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/light_red"
                android:text="@string/learn_not_memo"
                android:layout_marginHorizontal="25dp"/>

            <Button
                android:id="@+id/bt_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:backgroundTint="@color/light_green"
                android:text="@string/learn_memo"
                android:layout_marginHorizontal="25dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>